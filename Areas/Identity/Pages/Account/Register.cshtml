@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center my-4">@ViewData["Title"]</h3></div>
                            <div class="card-body">
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="form-group">
                                        <label class="mb-1" for="inputEmailAddress" asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Enter email address" />
                                        <span asp-validation-for="Input.Email" class="small text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" asp-for="Input.Password"></label>
                                        <input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" asp-for="Input.Password" />
                                        <span asp-validation-for="Input.Password" class="small text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" asp-for="Input.ConfirmPassword"></label>
                                        <input class="form-control py-4" id="inputPassword" type="password" placeholder="Confirm password" asp-for="Input.ConfirmPassword" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="small text-danger"></span>
                                    </div>
                                    <div class="form-group mt-4 mb-0">
                                        <button type="submit" class="btn btn-primary">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



