@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center my-4">@ViewData["Title"]</h3></div>
                            <div class="card-body">
                                <form id="account" method="post">
                                    <div class="form-group">
                                        <label class="mb-1" for="inputEmailAddress" asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Enter email address"/>
                                        <span asp-validation-for="Input.Email" class="small text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" asp-for="Input.Password"></label>
                                        <input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" asp-for="Input.Password" />
                                        <span asp-validation-for="Input.Password" class="small text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" asp-for="Input.RememberMe"/>
                                            <label class="custom-control-label" for="rememberPasswordCheck">Remember password</label>
                                        </div>
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        <button class="btn btn-primary" type="submit">Log in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
