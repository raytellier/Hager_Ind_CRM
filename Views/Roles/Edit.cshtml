@model Hager_Ind_CRM.ViewModels.RolePermsVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Role</h2>


<form asp-action="Edit">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="rolePerms" class="control-label"></label>
                <h6>Companies</h6>
                <table>
                    <tr>
                        @{
                            static string UppercaseFirst(string s)
                            {
                                if (string.IsNullOrEmpty(s))
                                {
                                    return String.Empty;
                                }
                                return char.ToUpper(s[0]) + s.Substring(1);
                            }

                            List<Hager_Ind_CRM.ViewModels.PermVM> perms = ViewBag.Perms;
                            foreach (var perm in perms)
                            {
                                if (perm.PermValue.Contains("companies"))
                                {
                                    string[] permName = perm.PermValue.Split('.');
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedPerms"
                                               value="@perm.PermValue"
                                               @(Html.Raw(perm.Assigned ? "checked=\"checked\"" : "")) />
                                        @UppercaseFirst(permName[1]) @:&nbsp;&nbsp;
                                    @:</td>
                                }
                            }
                        @:</tr>
                        }
                    </table>


                    <h6>Contacts</h6>
                    <table>
                        <tr>
                            @{
                                foreach (var perm in perms)
                                {
                                    if (perm.PermValue.Contains("contacts"))
                                    {
                                        string[] permName = perm.PermValue.Split('.');
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedPerms"
                                                   value="@perm.PermValue"
                                                   @(Html.Raw(perm.Assigned ? "checked=\"checked\"" : "")) />
                                            @UppercaseFirst(permName[1]) @:&nbsp;&nbsp;
                                        @:</td>
                                    }
                                }
                            @:</tr>
                            }
                        </table>

                        <h6>Employees</h6>
                        <table>
                            <tr>
                                @{
                                    foreach (var perm in perms)
                                    {
                                        if (perm.PermValue.Contains("employees"))
                                        {
                                            string[] permName = perm.PermValue.Split('.');
                                            @:<td>
                                                <input type="checkbox"
                                                       name="selectedPerms"
                                                       value="@perm.PermValue"
                                                       @(Html.Raw(perm.Assigned ? "checked=\"checked\"" : "")) />
                                                @UppercaseFirst(permName[1]) @:&nbsp;&nbsp;
                                            @:</td>
                                        }
                                    }
                                @:</tr>
                                }
                            </table>

                            <h6>User Management</h6>
                            <table>
                                <tr>
                                    @{
                                        foreach (var perm in perms)
                                        {
                                            if (perm.PermValue.Contains("users"))
                                            {
                                                string[] permName = perm.PermValue.Split('.');
                                                @:<td>
                                                    <input type="checkbox"
                                                           name="selectedPerms"
                                                           value="@perm.PermValue"
                                                           @(Html.Raw(perm.Assigned ? "checked=\"checked\"" : "")) />
                                                    @UppercaseFirst(permName[1]) @:&nbsp;&nbsp;
                                                @:</td>
                                            }
                                        }
                                    @:</tr>
                                    }
                                </table>

                                <h6>Role Management</h6>
                                <table>
                                    <tr>
                                        @{
                                            foreach (var perm in perms)
                                            {
                                                if (perm.PermValue.Contains("roles"))
                                                {
                                                    string[] permName = perm.PermValue.Split('.');
                                                    @:<td>
                                                        <input type="checkbox"
                                                               name="selectedPerms"
                                                               value="@perm.PermValue"
                                                               @(Html.Raw(perm.Assigned ? "checked=\"checked\"" : "")) />
                                                        @UppercaseFirst(permName[1]) @:&nbsp;&nbsp;
                                                    @:</td>
                                                }
                                            }
                                        @:</tr>
                                        }
                                    </table>

                                    <h6>List Management</h6>
                                    <table>
                                        <tr>
                                            @{
                                                foreach (var perm in perms)
                                                {
                                                    if (perm.PermValue.Contains("lists"))
                                                    {
                                                        string[] permName = perm.PermValue.Split('.');
                                                        @:<td>
                                                            <input type="checkbox"
                                                                   name="selectedPerms"
                                                                   value="@perm.PermValue"
                                                                   @(Html.Raw(perm.Assigned ? "checked=\"checked\"" : "")) />
                                                            @UppercaseFirst(permName[1]) @:&nbsp;&nbsp;
                                                        @:</td>
                                                    }
                                                }
                                            @:</tr>
                                            }
                                        </table>
                                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>