@model Hager_Ind_CRM.Models.Employee

@{
    ViewData["Title"] = "Delete";
}
<h1 class="mt-4">Delete Employee</h1>

<ol class="breadcrumb mb-3">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Employees" asp-action="Index">Employees</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Employees" asp-action="Details" asp-route-id="@Model.ID">Details</a></li>
    <li class="breadcrumb-item active">Delete</li>
</ol>
<h3 class="mb-3">Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-lg-6 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb ">
            <dt class="form-group col-12">
                <h4>Employee information</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.FirstName):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.LastName):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Email):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.DateOfBirth):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.CellPhone):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CellPhone)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.HomePhone):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.HomePhone)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmergencyContactName):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmergencyContactName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmergencyContactPhone):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmergencyContactPhone)
            </dd>
        </dl>
    </div>
    <div class="col-lg-6 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb">
            <dt class="form-group col-12">
                <h4>Employment information</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.JobPosition):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.JobPosition.Name)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmploymentType):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmploymentType.Type)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.KeyFobNumber):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.KeyFobNumber)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Wage):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Wage)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Expense):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Expense)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.DateJoined):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.DateJoined)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Active):
            </dt>
            <dd class="col-sm-7">
                @if (Model.Active == true)
                {
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" id="active_1" type="checkbox" checked="checked" disabled="disabled" />
                        <label class="custom-control-label" for="active_1"></label>
                    </div>
                }
                else
                {
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" id="active_2" type="checkbox" disabled="disabled" />
                        <label class="custom-control-label" for="active_2"></label>
                    </div>
                }
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.IsUser):
            </dt>
            <dd class="col-sm-7">
                @if (Model.IsUser == true)
                {
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" id="user_1" type="checkbox" checked="checked" disabled="disabled" />
                        <label class="custom-control-label" for="user_1"></label>
                    </div>
                }
                else
                {
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" id="user_2" type="checkbox" disabled="disabled" />
                        <label class="custom-control-label" for="user_2"></label>
                    </div>
                }
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.PermissionLevel):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.PermissionLevel)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.InactiveDate):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.InactiveDate)
            </dd>
        </dl>
    </div>
    <div class="col-lg-6 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb">
            <dt class="form-group col-12">
                <h4>Adress information</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Address1):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Address1)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Address2):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Address2)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.BillingCountryID):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Country.Name)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.BillingProvinceID):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Province.Name)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.City):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.BillingPostal):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.BillingPostal)
            </dd>
        </dl>
    </div>
    <div class="col-12 mt-2">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.ID">Cancel</a>
            <input type="submit" value="Confirm Delete" class="btn btn-outline-danger" />
        </form>
    </div>
</div>



