@using Hager_Ind_CRM.Data
@model Hager_Ind_CRM.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1 class="mt-4">Details Employee</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Employees" asp-action="Index">Employees</a></li>
    <li class="breadcrumb-item active">Details</li>
</ol>
<div class="row">
    <div class="col-lg-6 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb">
            <dt class="form-group col-12">
                <h4>Employee information</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.CellPhone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CellPhone)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.HomePhone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.HomePhone)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmergencyContactName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmergencyContactName)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmergencyContactPhone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmergencyContactPhone)
            </dd>
        </dl>
    </div>
    <div class="col-lg-6 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb">
            <dt class="form-group col-12">
                <h4>Employment information</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.JobPosition)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.JobPosition.Name)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmploymentType)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmploymentType.Type)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.DateJoined)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.DateJoined)
            </dd>
        </dl>
    </div>
    <div class="col-12 mt-2">
        @{ if (User.HasClaim(CustomClaimTypes.Permission, Employees.Update))
            {
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            }
        }
        @{ if (User.HasClaim(CustomClaimTypes.Permission, Employees.Delete))
            {
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
            }
        }
    </div>
</div>