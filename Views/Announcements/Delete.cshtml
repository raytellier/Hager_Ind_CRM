@model Hager_Ind_CRM.Support.Announcement

@{
    ViewData["Title"] = "Delete";
}
<h1 class="mt-4">Delete Announcement</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Delete Announcement</li>
</ol>

<h3 class="mb-3">Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-lg-8 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb">
            <dt class="form-group col-12">
                <h4>Announcement</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Notice):
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notice)
            </dd>
        </dl>
    </div>
    <div class="col-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Cancel</a>
            <input type="submit" value="Confirm Delete" class="btn btn-outline-danger" />
        </form>
    </div>
</div>