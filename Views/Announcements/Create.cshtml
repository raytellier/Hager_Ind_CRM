@model Hager_Ind_CRM.Support.Announcement

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Create Announcement</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Create Announcement</li>
</ol>

<form asp-action="Create">
    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="breadcrumb">
                <div class="form-group col-12">
                    <h4>Announcement</h4>
                    <hr class="mb-0" />
                </div>
                <div class="form-group col-12">
                    <label asp-for="Notice" class="control-label"></label>
                    <input asp-for="Notice" class="form-control" />
                    <span asp-validation-for="Notice" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-12">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-outline-danger" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
