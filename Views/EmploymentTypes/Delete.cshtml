@model Hager_Ind_CRM.Models.EmploymentType

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-4">Delete Employment Type</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active"><a asp-area="" asp-controller="Home" asp-action="Management">Configuration</a></li>
    <li class="breadcrumb-item active"><a asp-area="" asp-controller="Home" asp-action="EditLists">Editable lists</a></li>
    <li class="breadcrumb-item active"><a asp-area="" asp-controller="EmploymentTypes" asp-action="Index">Employment Types</a></li>
    <li class="breadcrumb-item active">Delete</li>
</ol>

<h3 class="mb-3">Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-lg-6 col-sm-12 d-flex align-items-stretch">
        <dl class="breadcrumb">
            <dt class="form-group col-12">
                <h4>Employment Type Information</h4>
                <hr class="mb-0" />
            </dt>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Type):
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </dl>
    </div>
    <div class="col-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <a class="btn btn-primary" asp-action="Index">Cancel</a>
            <input type="submit" value="Confirm Delete" class="btn btn-outline-danger" />
        </form>
    </div>
</div>
