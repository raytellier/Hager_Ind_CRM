@model Hager_Ind_CRM.Models.Company

@{
    ViewData["Title"] = "Create";
}
<h1 class="mt-4">Create Company</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Companies" asp-action="Index">Companies</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="row">
        <div class="col-12">
            <div class="breadcrumb">
                <div class="form-group col-12">
                    <h4>Company information</h4>
                    <hr class="mb-0" />
                </div>
                <div class="form-group col-xl-4 col-md-6 col-sm-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-md-6 col-sm-12">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-md-6 col-sm-12">
                    <label asp-for="Website" class="control-label"></label>
                    <input asp-for="Website" class="form-control" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-3 col-md-6 col-sm-6">
                    <label asp-for="BillingTermsID" class="control-label"></label>
                    <select asp-for="BillingTermsID" class="form-control" asp-items="ViewBag.BillingTermsID">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="BillingTermsID" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-2 col-md-3 col-sm-6">
                    <label asp-for="CurrencyID" class="control-label"></label>
                    <select asp-for="CurrencyID" class="form-control" asp-items="ViewBag.CurrencyID">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="CurrencyID" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-3 col-md-4 col-sm-12">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-xl-2 col-md-3 col-sm-6 d-flex align-items-center justify-content-center">
                    <div class="custom-control custom-checkbox pt-4">
                        <input class="custom-control-input" id="credit" type="checkbox" asp-for="CredCheck" />
                        <label class="custom-control-label" for="credit">@Html.DisplayNameFor(model => model.CredCheck)</label>
                    </div>
                </div>
                <div class="form-group form-check col-xl-2 col-md-1 col-sm-6 d-flex align-items-center justify-content-center">
                    <div class="custom-control custom-checkbox pt-4">
                        <input class="custom-control-input" id="active" type="checkbox" asp-for="Active" />
                        <label class="custom-control-label" for="active">@Html.DisplayNameFor(model => model.Active)</label>
                    </div>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6 col-sm-12">
            <div class="breadcrumb">
                <div class="form-group col-12">
                    <h4>Billing information</h4>
                    <hr class="mb-0" />
                </div>
                <div class="form-group col-xl-6 col-sm-12">
                    <label asp-for="BillingAddress1" class="control-label"></label>
                    <input asp-for="BillingAddress1" class="form-control" />
                    <span asp-validation-for="BillingAddress1" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6 col-sm-12">
                    <label asp-for="BillingAddress2" class="control-label"></label>
                    <input asp-for="BillingAddress2" class="form-control" />
                    <span asp-validation-for="BillingAddress2" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-lg-6 col-sm-6">
                    <label asp-for="BillingCountryID" class="control-label"></label>
                    <select asp-for="BillingCountryID" class="form-control" asp-items="ViewBag.BillingCountryID">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="BillingCountryID" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-lg-6 col-sm-6">
                    <label asp-for="BillingProvinceID" class="control-label"></label>
                    <select asp-for="BillingProvinceID" class="form-control" asp-items="ViewBag.BillingProvinceID">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="BillingProvinceID" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-lg-12 col-sm-12">
                    <label asp-for="BillingPostalCode" class="control-label"></label>
                    <input asp-for="BillingPostalCode" class="form-control" />
                    <span asp-validation-for="BillingPostalCode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-sm-12">
            <div class="breadcrumb">
                <div class="form-group col-12">
                    <h4>Shipping information</h4>
                    <hr class="mb-0" />
                </div>
                <div class="form-group col-xl-6 col-sm-12">
                    <label asp-for="ShippingAddress1" class="control-label"></label>
                    <input asp-for="ShippingAddress1" class="form-control" />
                    <span asp-validation-for="ShippingAddress1" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6 col-sm-12">
                    <label asp-for="ShippingAddress2" class="control-label"></label>
                    <input asp-for="ShippingAddress2" class="form-control" />
                    <span asp-validation-for="ShippingAddress2" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-lg-6 col-sm-6">
                    <label asp-for="ShippingCountryID" class="control-label"></label>
                    <select asp-for="ShippingCountryID" class="form-control" asp-items="ViewBag.ShippingCountryID">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="ShippingCountryID" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-lg-6 col-sm-6">
                    <label asp-for="ShippingProvinceID" class="control-label"></label>
                    <select asp-for="ShippingProvinceID" class="form-control" asp-items="ViewBag.ShippingProvinceID">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="ShippingProvinceID" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-4 col-lg-12 col-sm-12">
                    <label asp-for="ShippingPostalCode" class="control-label"></label>
                    <input asp-for="ShippingPostalCode" class="form-control" />
                    <span asp-validation-for="ShippingPostalCode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-sm-12">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>


